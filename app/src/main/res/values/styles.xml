<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.CyberPurpleButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/DarkCyberGrapePurple</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.CyberLightBlueButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/LightCyberBlue</item>
        <item name="android:textColor">@color/CyberBlack</item>
    </style>

    <style name="AppTheme.CyberBlackButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/CyberBlack</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.CyberGreyButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/CyberGrey</item>
        <item name="android:textColor">@color/CyberBlack</item>
    </style>

    <style name="AppTheme.CyberBlueButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/CyberBlue</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.NotWhiteButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/NotWhite</item>
        <item name="android:textColor">@color/CyberBlack</item>
    </style>

</resources>