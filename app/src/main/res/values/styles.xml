<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/ShadyBlue</item>
        <item name="android:textColorSecondary">@android:color/holo_blue_dark</item>
        <item name="android:textColorTertiary">@android:color/holo_blue_dark</item>
        <item name="android:textColorPrimaryInverse">@color/CyberGrey</item>
        <item name="android:textColorSecondaryInverse">@color/CyberGrey</item>
        <item name="android:textColorTertiaryInverse">@color/CyberGrey</item>
        <item name="android:textColorHint">@android:color/holo_blue_dark</item>
    </style>

    <style name="AppTheme.CyberPurpleButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/DarkCyberGrapePurple</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.CyberLightBlueButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/LightCyberBlue</item>
        <item name="android:textColor">@color/CyberBlack</item>
    </style>

    <style name="AppTheme.NotWhiteButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/NotWhite</item>
        <item name="android:textColor">@color/CyberBlack</item>
    </style>

</resources>